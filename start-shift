#!/bin/bash

PS3='Choose which shift to begin: '
options=("Tutor Shift" "Desk Shift" "No Shift")
select opt in "${options[@]}"
do
    case $opt in
        "Tutor Shift")
            ./shift-tutor
            break
            ;;
        "Desk Shift")
            ./shift-desk
            break
            ;;
        "No Shift")
            break
            ;;
        *)
            echo "Invalid option";;
    esac
done
